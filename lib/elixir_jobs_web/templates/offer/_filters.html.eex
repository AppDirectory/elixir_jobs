<div class="filters">
  <%= form_for @conn, offer_path(@conn, :index), [as: :filter, method: :get], fn f -> %>
    <div class="input text">
      <%= text_input(f, :text,
        id: "filter_text",
        class: class_with_error(f, :text, "text"),
        placeholder: gettext("Search offers by title, location...")) %>
    </div>
    <div class="input select place">
      <%= select(f, :job_place, get_job_place_options(gettext("Unknown")), prompt: gettext("Any job place")) %>
    </div>
    <div class="input select type">
    <%= select(f, :job_type, get_job_type_options(gettext("Unknown")), prompt: gettext("Any job type")) %>
    </div>
    <%= submit(gettext("Search"), class: "btn-success") %>
  <% end %>
</div>
